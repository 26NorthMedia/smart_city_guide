<div class="checkbox-menu">
  <label for="check">guides</label>
  <input type="checkbox" name="check" id="checkGuides" value="0" onchange="javascript:showContentGuides()" />
  
  <label for="check">routes</label>
  <input type="checkbox" name="check" id="checkRoutes" value="0" onchange="javascript:showContentRoutes()" />
  
  <label for="check">points</label>
  <input type="checkbox" name="check" id="checkPoints" checked="checked" onchange="javascript:showContentPoints()" />
</div>




<div class="content-checkbox">
  <div id="content_guides" >

      <%= render :partial => "guides/item" %>

  </div>

  <div id="content_routes" >

      <%= render :partial => "routes/item" %>

  </div>

  <div id="content_points" >

      <%= render :partial => "points/item" %>

  </div>
</div>















