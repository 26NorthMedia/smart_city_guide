<%# sidebar %>
<%#= location(link_to(t('home')+": "+ truncate_name(sanitize current_subject.name)))%>     
<% toolbar %>
<%# if current_subject.respond_to?(:recent_groups) %>
 <%#= render partial: "users/groups",
             locals: { user: current_subject } %>
<%# end %>
<article class="left_home">
	<div class="info_city">
		<%= render :partial => "home/info_city" %>
	</div>
	<div class="interest_points">
		<%= render :partial => "home/interest_points" %>
	</div>
</article>


<article class="right_home">
	<h4>planification</h4>
	<div class="planning">
		<ul class="thumbnails sortable">
			<%#= render :partial => "places/item" %>
		</ul>
		<!--http://jqueryui.com/draggable/#sortable-->
	</div>
	<div class="wall">

			<%= render :partial => "activities/index", :locals => { :activities => current_subject.wall(:home).page(params[:page]), :owner => current_subject } %>
	</div>
 </article>


