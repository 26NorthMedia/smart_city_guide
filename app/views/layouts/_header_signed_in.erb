<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container nav-header">
      <button class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse" type="button">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to(image_tag('logos-111.png', :alt => t('site.name')), root_path, class: 'logo') %>
      

      
      
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="user-nav">
            <%= link_to current_subject do %>
              <span class="avatar-nav"><%= image_tag current_subject.logo.url(:small) , :class=> "logo-user" %></span>
              <span class="name"><%= truncate_name(current_subject.name, length: 15) %></span>
            <% end %>
          </li>
          
        </ul>
      </div>
    <div class="asistfloat">
      <div class="search-nav">
        <%= form_tag search_path, method: 'get', class: "navbar-search" do %>
        <%= text_field_tag :q, nil, autocomplete: :off, class: 'search-query', placeholder: t('search.name'), "data-min_query" => SocialStream::Search::MIN_QUERY %>
        <% end %>
        <%= javascript_tag do %>
          $(function() {
          SocialStream.SearchHeader.show();
          });
        <% end %>
        <div class="mat">
          <%= render partial: 'layouts/loading' %>

          <div class="query_too_short">
            <%= t 'search.at_least', count: SocialStream::Search::MIN_QUERY %>
          </div>

          <div class="no_results">
            <%= t 'search.nothing' %>
          </div>

          <div class="results">
          </div>
        </div>
      </div>

      <div class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">go to<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
          <%= render partial: 'layouts/header_dropdown' %>
        </ul>
      </div>
    </div>

    </div>
  </div>
</div>




