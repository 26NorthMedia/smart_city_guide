<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container nav-header">
      <button class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse" type="button">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(image_tag('barco_blanco.png', :alt => t('site.name')), root_path, class: 'logo') %>
      <a class="brand">HELLOWORLD</a>
      
      <div class="nav-collapse collapse pull-right">
        <ul class="nav">
          <li class="user-nav">
            <%= link_to current_subject do %>
              <span class="avatar-nav"><%= image_tag current_subject.logo.url(:small) , :class=> "logo-user" %></span>
              <span class="name"><%= truncate_name(current_subject.name, length: 15) %></span>
            <% end %>
          </li>
          <li> 
            <%= render partial: 'layouts/header_dropdown' %>
          </li>
        </ul>
      </div>
      <div class="search-nav pull-right">
        <%= form_tag search_path, method: 'get', class: "navbar-search pull-right" do %>
          <%= text_field_tag :q, nil, autocomplete: :off, class: 'search-query', placeholder: t('search.name') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
