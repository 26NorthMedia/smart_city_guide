<!-- HTML5 DOCTYPE -->
<!DOCTYPE html>
<html lang="en">

  <head>
<%= render :partial => "layouts/head" %>
  </head>

  <body>
    <div class="wrapper container">
      <header id="header">
        <%= render :partial => "layouts/header" %>
      </header>
      <section>
        <div id="wrapper_body">
          <div id="flash">
            <%#= render :partial => "layouts/flash", :locals => {:flash => flash} %>
          </div>

          <%= render :partial => "layouts/description" %>

          <%= yield %>
        </div>
      </section>
      <br class="clearfloat" />
      
      <div class="push">
      </div>
    </div>
    <footer class="footer">
      <%= render :partial => "layouts/footer" %>
    </footer>
  </body>
</html>
