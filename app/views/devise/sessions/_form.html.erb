<section id="sign_in">
  <h3>
    login
  </h3>

  <%= form_for(@user, :as => :user, :url => session_path(:user)) do |f| %>
    <%= devise_error_messages! if controller.controller_name == 'sessions' %>

    <article class="login_data">

      <%= f.label :email %>

      <%= f.email_field :email %>

      <%= f.label :password %>

      <%= f.password_field :password %>

      <% if ::Devise.mappings[:user].rememberable? -%>
        <div class="remember">
          <%= f.check_box :remember_me %> 
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= f.submit t('sign_in'), :class =>"btn" %>

      <hr class="soften">

      <%= render :partial => "devise/shared/links" %>  

    </article>
  <% end %>
</section>
